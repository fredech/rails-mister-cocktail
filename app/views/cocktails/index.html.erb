<div class="container home-banner" style="background-image: url(<%= image_path("cocktail.jpg")%>">
  <div class="row">

    <h1></h1>
    <%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-danger"%>


  </div>


 <div class="row">


    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path("coco.jpeg")%>">
    <div class="card-category"></div>
    <div class="card-description">
    <h2><%=cocktail.name%></h2>
  </div>
  <a class="card-link" href="<%= cocktail_path(cocktail)%>" ></a>
  </div>

    </div>
    <% end %>
  </div>
</div>



