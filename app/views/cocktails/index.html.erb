<div class="container home-banner" style="background-image: url(<%= image_path("cocktail.jpg")%>">
  <div class="row">
    <div class=“col-xs-12 col-sm-10 col-sm-offset-1”>

    <h1>List of Cocktails</h1>
    <%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-danger"%>

     <ul class= "list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item"> <%= link_to cocktail.name, cocktail_path(cocktail)%></li>
    <% end %>
    </div>
  </div>
</div>
